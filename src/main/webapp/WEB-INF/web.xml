    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.dsu.accoutingdsu.web_controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DispatcherServlet</servlet-name>
        <servlet-class>com.dsu.accoutingdsu.web_controller.dispatcherServlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersannelDepartment</servlet-name>
        <servlet-class>com.dsu.accoutingdsu.web_controller.PersannelDepartment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DispatcherServlet</servlet-name>
        <url-pattern>/DispatcherServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/LoginController</url-pattern>
        <url-pattern>/persannelDepartment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersannelDepartment</servlet-name>
        <url-pattern>/staff</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <jsp-property-group>
            <description>Настройка колонтитулов</description>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/WEB-INF/persannelDepartment/staff.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
    <security-constraint>
        <display-name>pd</display-name>
        <web-resource-collection>
            <web-resource-name>persanneldepartment</web-resource-name>
            <description/>
            <url-pattern>/persannelDepartment/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>persanneldepartment</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbcRealm</realm-name>
        <form-login-config>
            <form-login-page>/index.jsp</form-login-page>
            <form-error-page>/error/401.html</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>persanneldepartment</role-name>
    </security-role>
</web-app>
